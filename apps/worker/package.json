{
  "name": "worker",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --env-file=../../.env --env-file=.env run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "lint": "eslint . --max-warnings 0",
    "tsc": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "fetch-referrers": "bun fetch-referrers.ts && bun run format",
    "migrate-referrers": "bun ./src/migrations/migrate-referrers.ts",
    "migrate-devices": "bun ./src/migrations/migrate-devices.ts",
    "migrate-user-identifications": "bun ./src/migrations/migrate-user-identifications.ts",
    "migrate-failed-user-jobs": "bun ./src/migrations/migrate-failed-user-jobs.ts",
    "data-import-pirsch": "bun ./src/migrations/pirsch-data-import.ts",
    "queue-email-drips": "bun ./src/migrations/queue-email-drips.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@axiomhq/pino": "^1.3.1",
    "@vemetric/common": "workspace:*",
    "@vemetric/email": "workspace:*",
    "@vemetric/logger": "workspace:*",
    "@vemetric/node": "0.1.3",
    "@vemetric/queues": "workspace:*",
    "bullmq": "^5.41.5",
    "clickhouse": "workspace:*",
    "database": "workspace:*",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "remeda": "^1.61.0",
    "ua-parser-js": "^2.0.3"
  },
  "devDependencies": {
    "@clickhouse/client": "^1.11.0",
    "@types/bun": "1.2.23",
    "@vemetric/eslint-config": "workspace:*",
    "csv-parser": "^3.2.0",
    "nanoid": "^5.0.4",
    "typescript": "^5.7.3",
    "vitest": "^3.2.3"
  }
}
