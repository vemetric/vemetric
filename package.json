{
  "name": "vemetric",
  "description": "Simple, yet powerful web- and product analytics.",
  "private": true,
  "author": "Vemetric <info@vemetric.com> (https://vemetric.com/)",
  "scripts": {
    "build": "turbo run build --filter=!./apps/dev-proxy",
    "dev": "turbo run dev --filter=!./apps/health-check",
    "lint": "turbo run lint",
    "tsc": "turbo run tsc",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "turbo": "turbo"
  },
  "dependencies": {
    "eslint": "^9.18.0",
    "prettier": "^3.0.3",
    "turbo": "2.6.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.2.23"
}
