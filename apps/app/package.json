{
  "name": "app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "types": "./types.ts",
  "scripts": {
    "dev": "bunx --bun vite --port 4000",
    "build": "bun run build:web && bun run build:server",
    "build:web": "bunx --bun vite build",
    "build:server": "tsc --noEmit --skipLibCheck -p tsconfig.server.json",
    "tsc": "bun run tsc:web && bun run tsc:server",
    "tsc:web": "tsc --noEmit",
    "tsc:server": "tsc --noEmit -p tsconfig.server.json",
    "lint": "eslint . --max-warnings 0",
    "preview": "bunx --bun vite preview",
    "start": "bun run src/backend/index.ts",
    "postinstall": "bun run chakra:build",
    "chakra:build": "chakra typegen src/frontend/style/theme.ts --strict",
    "test": "vitest run",
    "test:watch": "vitest",
    "generate-pwa-assets": "pwa-assets-generator --preset minimal-2023 public/logo.svg"
  },
  "dependencies": {
    "@ark-ui/react": "^5.30.0",
