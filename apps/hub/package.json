{
  "name": "hub",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --env-file=../../.env --env-file=.env run --hot src/index.ts",
    "build": "tsc --noEmit --skipLibCheck",
    "start": "bun run src/index.ts",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "fetch-bots": "bun fetch-bots.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@axiomhq/pino": "^1.3.1",
    "@clickhouse/client": "^1.11.0",
    "@vemetric/common": "workspace:*",
    "@vemetric/logger": "workspace:*",
    "@vemetric/queues": "workspace:*",
    "database": "workspace:*",
    "hono": "^4.6.13",
    "hono-pino": "^0.7.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "redis": "^4.6.12",
    "remeda": "^1.61.0",
    "zod": "3.23.6"
  },
  "devDependencies": {
    "@types/bun": "^1.2.0",
    "@types/js-yaml": "^4.0.9",
    "@vemetric/eslint-config": "workspace:*",
    "js-yaml": "^4.1.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.3"
  }
}
